#!/bin/bash

# Compilar ft_putchar.c
if [ -f "ex00/ft_putchar.c" ]; then
  echo "Compilando ft_putchar.c:"
  cc -Wall -Werror -Wextra ex00/ft_putchar.c -o ft_putchar
else
  echo "ex00/ft_putchar.c não encontrado."
fi
echo

# Compilar ft_print_alphabet.c
if [ -f "ex01/ft_print_alphabet.c" ]; then
  echo "Compilando ft_print_alphabet.c:"
  cc -Wall -Werror -Wextra ex01/ft_print_alphabet.c -o ft_print_alphabet
else
  echo "ex01/ft_print_alphabet.c não encontrado."
fi
echo

# Compilar ft_print_reverse_alphabet.c
if [ -f "ex02/ft_print_reverse_alphabet.c" ]; then
